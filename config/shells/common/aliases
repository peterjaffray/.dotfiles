# Common aliases that work across all shells
# Supports graceful fallbacks when commands aren't installed

# Function to create alias only if command exists, with fallbacks and helpful messages
safe_alias() {
    local name="$1"
    local cmd="$2"
    local fallback="$3"
    local install_msg="$4"
    
    if command -v "${cmd%% *}" >/dev/null 2>&1; then
        alias "$name"="$cmd"
    elif [ -n "$fallback" ]; then
        alias "$name"="$fallback"
    elif [ -n "$install_msg" ]; then
        # Create a wrapper function that shows install message
        eval "${name}() { echo 'ðŸ’¡ $install_msg' >&2; return 127; }"
    fi
}

# File operations
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ls='ls --color=auto'

# Directory navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# System info
alias df='df -h'
alias du='du -h'
alias free='free -h'

# Safety nets
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Git aliases
alias g='git'
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gco='git checkout'
alias gp='git push'
alias gl='git pull'
alias gd='git diff'
alias gb='git branch'
alias glog='git log --oneline --graph --decorate'

# Docker aliases (with fallbacks)
safe_alias dc "docker compose" "docker-compose" "Install Docker Compose: apt install docker-compose-plugin"
alias dps='docker ps'
alias di='docker images'

# Kubernetes (only if kubectl is installed)
safe_alias k "kubectl" "" "Install kubectl: https://kubernetes.io/docs/tasks/tools/"

# Editor aliases with fallbacks
safe_alias v "nvim" "vim" "Install Neovim: apt install neovim / brew install neovim"
safe_alias vi "nvim" "vim" "Install Neovim: apt install neovim / brew install neovim"  
safe_alias vim "nvim" "vim" "Install Neovim: apt install neovim / brew install neovim"

# Network
alias ping='ping -c 4'
alias ports='netstat -tuln'

# Process management
alias ps='ps auxf'
alias psg='ps aux | grep -v grep | grep -i -e VSZ -e'

# Search and grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Modern alternatives with fallbacks
safe_alias cat "bat" "cat" "Install 'bat' for syntax highlighting: apt install bat / brew install bat"
safe_alias tree "exa --tree" "tree" "Install 'exa' for better tree: apt install exa / brew install exa"
safe_alias find "fd" "find" "Install 'fd' for faster find: apt install fd-find / brew install fd"

# Modern ls alternatives with smart fallbacks
if command -v exa >/dev/null 2>&1; then
    alias ls='exa'
    alias ll='exa -la'
elif command -v ls >/dev/null 2>&1; then
    alias ls='ls --color=auto 2>/dev/null || ls'  # Handle systems without --color
fi

# Modern grep with fallback
if command -v rg >/dev/null 2>&1; then
    alias grep='rg'
else
    alias grep='grep --color=auto'
fi

# System-specific aliases
case "$(uname -s)" in
    Linux*)
        alias open='xdg-open'
        alias pbcopy='xclip -selection clipboard'
        alias pbpaste='xclip -selection clipboard -o'
        ;;
    Darwin*)
        alias ll='ls -alG'
        ;;
esac

# WSL-specific aliases
if [ -n "${WSL_DISTRO_NAME}" ]; then
    alias explorer='explorer.exe'
    alias code='code.exe'
    alias notepad='notepad.exe'
fi
#!/bin/bash
# Secret Configuration Template
# Copy this file to dotfiles/secrets/secrets.sh and fill in your values
# This file will be sourced by shells but NOT committed to git

# API Keys and Tokens
export GITHUB_TOKEN=""
export OPENAI_API_KEY=""
export ANTHROPIC_API_KEY=""
export AWS_ACCESS_KEY_ID=""
export AWS_SECRET_ACCESS_KEY=""

# Database Credentials
export DB_HOST=""
export DB_USER=""
export DB_PASSWORD=""
export DB_NAME=""

# Personal Information
export PERSONAL_EMAIL=""
export WORK_EMAIL=""
export GPG_KEY_ID=""

# Cloud Services
export DIGITAL_OCEAN_TOKEN=""
export CLOUDFLARE_API_TOKEN=""
export VERCEL_TOKEN=""

# Development
export NPM_TOKEN=""
export PYPI_TOKEN=""
export DOCKER_REGISTRY_TOKEN=""

# Custom secrets for your scripts
export MY_SECRET_API=""

# SSH Agent (if needed)
# export SSH_AUTH_SOCK=""
# export SSH_AGENT_PID=""

# Function to validate secrets are loaded
validate_secrets() {
    local missing=()
    
    # Add critical secrets to check
    [ -z "$GITHUB_TOKEN" ] && missing+=("GITHUB_TOKEN")
    
    if [ ${#missing[@]} -gt 0 ]; then
        echo "Warning: Missing secrets: ${missing[*]}"
        echo "Please configure them in ~/.config/dotfiles/secrets/secrets.sh"
        return 1
    fi
    return 0
}